# =============================================================================
# Release Configuration Template
# =============================================================================
# Copy this file to .release.env and customize as needed
# Usage: ./release.sh                    (automatically loads this file)
#
# Or inline: RELEASE_VERSION=1.0.0 ./release.sh
# =============================================================================

# REQUIRED: Version to release (format: X.Y.Z)
export RELEASE_VERSION=1.0.0

# OPTIONAL: Next development version (defaults to auto-increment minor version)
# export NEXT_VERSION=1.1.0

# OPTIONAL: Skip tests during build (default: false)
# export SKIP_TESTS=false

# OPTIONAL: Show what would happen without executing (default: false)
# export DRY_RUN=true

# OPTIONAL: Automatically push to remote without confirmation (default: false)
# export AUTO_PUSH=false

# OPTIONAL: Git remote name (default: origin)
# export REMOTE_NAME=origin

# OPTIONAL: Git branch name (default: main)
# export BRANCH_NAME=main

# =============================================================================
# Common Presets (uncomment to use)
# =============================================================================

# Fast Release (skip tests, auto-push)
# export SKIP_TESTS=true
# export AUTO_PUSH=true

# Safe Release (dry run first)
# export DRY_RUN=true

# CI/CD Mode (automated, no prompts)
# export AUTO_PUSH=true
# export SKIP_TESTS=false
