# SonarQube Project Configuration for MuleSoft Plugin
#
# Setup:
# 1. Copy this file to sonar-project.properties: cp sonar-project.properties.example sonar-project.properties
# 2. Update sonar.token with your token from SonarQube (User > My Account > Security)
# 3. Update sonar.host.url if using a different server

# Server Configuration
sonar.host.url=http://localhost:9000
sonar.token=YOUR_SONARQUBE_TOKEN_HERE

# Project Information
sonar.projectKey=sonar-mulesoft-plugin
sonar.projectName=SonarQube MuleSoft Plugin
sonar.projectVersion=1.1.0-SNAPSHOT

# Source Configuration
sonar.sources=src/main/java
sonar.tests=src/test/java
sonar.sourceEncoding=UTF-8

# Java Configuration
sonar.java.source=17
sonar.java.binaries=target/classes
sonar.java.test.binaries=target/test-classes

# Analysis Configuration
sonar.scm.disabled=true
sonar.verbose=true
